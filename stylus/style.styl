// *** Variables ***
// Color theme
color-gray = rgb(236, 240, 241)
color-blue-light = rgb(52, 152, 219)
color-blue-medium = rgb(41, 128, 185)
color-blue-dark = rgb(44, 62, 80)
color-red = rgb(231, 76, 60)

// *** Mixins ***
clearfix()
    zoom 1
    &:after
    &:before
        content ""
        display table
    &:after
        clear both

.dv // Division
    position relative
    float left
    &-14 // Division 1/4
        width 25%
    &-13 // Division 1/3
        width 33.333%
    &-12 // Division 1/2
        width 50%

body {
    background-color: color-gray;
}

.btn-menu {
    width: 49px;
    height: 41px;
    border: none;
    text-indent: -9999px;
    margin-top: 1.6em;
    margin-left: 3em;
    background-image: url('../slices/desktop/menu-icon.png');
    background-repeat: no-repeat;
    background-color: transparent;
    &:hover {
        opacity: .5;    
    }
}
.container {
    &-full-width {
        background-color: color-blue-light;
    }    
}
.container-header {
    padding-top: 1.2em;
    position: relative;
    clearfix()

    .link-home {
        display: block;
        position: relative;

        .logo-image {
            position: relative;
        }
        .logo-slogan {
            color: #d0f2ff;
            font-size: 1.2em;
            position: relative;
        }
    }
}