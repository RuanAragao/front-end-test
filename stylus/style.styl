// *** Variables ***
// Color theme
color-gray = rgb(236, 240, 241)
color-blue-light = rgb(52, 152, 219)
color-blue-medium = rgb(41, 128, 185)
color-blue-dark = rgb(44, 62, 80)
color-red = rgb(231, 76, 60)

// *** Mixins ***
clearfix()
    zoom 1
    &:after
    &:before
        content ""
        display table
    &:after
        clear both

border-radius(n)
    -webkit-border-radius n
    -moz-border-radius n
    border-radius n

.dv // Division
    position relative
    float left
    &-14 // Division 1/4
        width 25%
    &-13 // Division 1/3
        width 33.333%
    &-12 // Division 1/2
        width 50%

body
    background-color color-gray

.btn-menu
    width 49px
    height 41px
    border none
    text-indent -9999px
    margin-top 1.6em
    margin-left 1em
    background-image url('../slices/desktop/menu-icon.png')
    background-repeat no-repeat
    background-color transparent
    &:hover
        opacity: .5

.btn-social
    border 1px solid #2481ba
    background-color white
    padding .5em 1em
    box-shadow 0 1px 3px rgba(0,0,0,.1)
    margin-top 1.5em
    margin-left 2em
    display inline-block
    font-variant small-caps
    border-radius(5px)

    &-facebook
        color #335190
    &-twitter
        color #00aef2

.container
    &-full-width
        background-color color-blue-light
     
.container-header
    padding-top 1.2em
    position relative
    clearfix()

    .link-home
        display block
        position relative

        .logo-image
            display block
            float left
            position relative
        
        .logo-slogan 
            color #d0f2ff
            font-size 1.2em
            position relative
            margin-top 3em
            margin-left 1em
            display block
            float left
    
    .header-social
        text-align right 
