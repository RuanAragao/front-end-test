// *** Variables ***
// Color theme
color-gray = rgb(236, 240, 241)
color-blue-light = rgb(52, 152, 219)
color-blue-medium = rgb(41, 128, 185)
color-blue-dark = rgb(44, 62, 80)
color-red = rgb(231, 76, 60)

// *** Mixins ***
clearfix()
    zoom 1
    &:after
    &:before
        content ""
        display table
    &:after
        clear both

border-radius(n)
    -webkit-border-radius n
    -moz-border-radius n
    border-radius n

.dv // Division
    position relative
    float left
    &-14 // Division 1/4
        width 25%
    &-13 // Division 1/3
        width 33.333%
    &-12 // Division 1/2
        width 50%
    &-23 // Division 2/3
        width 66.666%
    &-34 // Division 3/4
        width 75%
    &-15 // Division 1/5
        width 20%
    &-35 // Division 3/5
        width 60%

body
    background-color color-gray

.btn-menu
    width 49px
    height 41px
    border none
    text-indent -9999px
    margin-top 1.6em
    margin-left 1em
    background-image url('../slices/desktop/menu-icon.png')
    background-repeat no-repeat
    background-color transparent
    &:hover
        opacity: .5

.btn-social
    border 1px solid #2481ba
    background-color white
    padding .5em 1em
    box-shadow 0 1px 3px rgba(0,0,0,.1)
    margin-top 1.5em
    margin-left 2em
    display inline-block
    font-variant small-caps
    border-radius(5px)

    &-facebook
        color #335190
    &-twitter
        color #00aef2

.block
    h1
        font-size 1.8em
        
    &-row
        display block
        position relative

.box
    padding-top 5rem

.container
    &-full
        &-header
            background-color color-blue-light
     
.container-header
    padding-top 1.2em
    position relative
    clearfix()

    .link-home
        display block
        position relative

        .logo-image
            display block
            float left
            position relative
        
        .logo-slogan 
            color #d0f2ff
            font-size 1.2em
            position relative
            margin-top 3em
            margin-left 1em
            display block
            float left
    
    .header-social
        text-align right 

.footer
    &-label
        text-align right 
        background-color color-blue-light
        .link-top
            color white
            font-size 1.2em
            font-weight bold
            display inline-block
            margin-top .7em
            margin-bottom .6em

    &-content
        color white
        padding-top 2em
        padding-bottom 2em
        background-color color-blue-dark
        span 
            display inline-block
            position relative
        .footer-logo
            // 
        .footer-copy
            font-size .84em
            padding-top 1em
        a 
            color white
            text-decoration underline


